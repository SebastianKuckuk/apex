.PHONY: increase-kokkos-serial
increase-kokkos-serial: $(BUILD_DIR)/increase-kokkos-serial

.PHONY: increase-kokkos-omp-host
increase-kokkos-omp-host: $(BUILD_DIR)/increase-kokkos-omp-host

.PHONY: increase-kokkos-cuda
